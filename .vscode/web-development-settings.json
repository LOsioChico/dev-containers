{
  "json.validate.enable": false,
  "editor.inlineSuggest.enabled": true,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "git.autofetch": true,
  "editor.linkedEditing": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.fontFamily": "'Cascadia Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "never"
  },
  "eslint.codeActionsOnSave.rules": null,
  "eslint.format.enable": true,
  "eslint.validate": [],
  "eslint.rules.customizations": [
    {
      "rule": "no-unused-vars",
      "severity": "info"
    },
    {
      "rule": "@typescript-eslint/no-unused-vars",
      "severity": "info"
    }
  ],
  "eslint.options": {},
  "eslint.run": "onSave",
  "editor.tabSize": 2,
  "html.format.extraLiners": " ",
  "emmet.syntaxProfiles": {
    "html": {
      "inline_break": true
    }
  },
  "htmltagwrap.tag": " ",
  "htmltagwrap.autoDeselectClosingTag": true,
  "editor.unicodeHighlight.allowedCharacters": {
    "ñ": true
  },
  "editor.fontLigatures": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "terminal.integrated.env.windows": {},
  "terminal.integrated.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  // Configuración adicional
  "editor.minimap.enabled": false,
  "errorLens.lintFilePaths": {
    "eslint": ["**/*.eslintrc.{js,cjs,yaml,yml,json}", "**/*package.json"],
    "Stylelint": [
      "**/*.stylelintrc",
      "**/*.stylelintrc.{cjs,js,json,yaml,yml}",
      "**/*stylelint.config.{cjs,js}",
      "**/*package.json"
    ]
  },
  "workbench.colorTheme": "Tokyo Night Storm",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.wordWrap": "on",
  "github.copilot.advanced": {},
  "github.copilot.enable": {
    "*": false,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "prisma": true,
    "typescript": false,
    "javascript": true
  },
  "reactSnippets.settings.typescriptPropsStatePrefix": "interface",
  "editor.renderWhitespace": "none",
  "editor.cursorBlinking": "expand",
  "editor.accessibilitySupport": "off",
  "workbench.sideBar.location": "right",
  "errorLens.delay": 500,
  "notebook.breadcrumbs.showCodeCells": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.unicodeHighlight.allowedLocales": {
    "es": true
  },
  "explorer.compactFolders": false,
  "scm.alwaysShowRepositories": true,
  "advancedNewFile.convenienceOptions": ["last", "current", "root"],
  "editor.guides.bracketPairsHorizontal": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "files.autoSave": "onFocusChange",
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.chat.localeOverride": "en",
  "workbench.iconTheme": "moxer-icons",
  "github.copilot.editor.enableAutoCompletions": true,
  "editor.lineHeight": 1.5,
  "editor.semanticHighlighting.enabled": true,
  "terminal.integrated.lineHeight": 1.5,
  "editor.formatOnSave": true,
  "reactSnippets.settings.importReactOnTop": false,
  "githubPullRequests.pullBranch": "never",
  "cursor.chat.showSuggestedFiles": true,
  "cursor.chat.smoothStreaming": true,
  "cursor-retrieval.canAttemptGithubLogin": false,
  "workbench.productIconTheme": "fluent-icons",
  "cursor.general.gitGraphIndexing": "enabled",
  "cursor.cpp.disabledLanguages": ["scminput"],
  "cursor.chat.alwaysSearchWeb": true,
  "git.confirmSync": false,
  "typescript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "javascript.referencesCodeLens.enabled": true,
  "typescript.referencesCodeLens.showOnAllFunctions": true,
  "prettier.useEditorConfig": false,
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.codeLensFontSize": 10,
  "diffEditor.codeLens": true
}
